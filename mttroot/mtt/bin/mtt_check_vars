#Look for a command line argument
while [ -n "`echo $1 | grep '-'`" ]; do
  case $1 in
	-p )
		print=print ;;
	*)
		echo "$1 is an invalid argument - ignoring" ;;
  esac
  shift
done

# Octave
#mtt_check_var "$OCTAVE_PATH" "OCTAVE_PATH" "$print" "Octave"

