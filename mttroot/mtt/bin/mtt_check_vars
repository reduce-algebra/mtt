#Look for a command line argument
while [ -n "`echo $1 | grep '-'`" ]; do
  case $1 in
	-p )
		print=print ;;
	*)
		echo "$1 is an invalid argument - ignoring" ;;
  esac
  shift
done


mtt_check_var "$MAKE" "MAKE" "$print"
mtt_check_var "$MTTPATH" "MTTPATH" "$print"
mtt_check_var "$MATRIX" "MATRIX" "$print"
mtt_check_var "$RMATRIX" "RMATRIX" "$print"
mtt_check_var "$SYMBOLIC" "SYMBOLIC" "$print"
mtt_check_var "$FIG" "FIG" "$print"
mtt_check_var "$PSVIEW" "PSVIEW" "$print"
mtt_check_var "$HTMLVIEW" "HTMLVIEW" "$print"
mtt_check_var "$DVIVIEW" "DVIVIEW" "$print"
mtt_check_var "$CC" "CC" "$print"



