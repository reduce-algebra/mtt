\usepackage{epsfig}

% Figure definition
 \newcommand{\fig}[4]{
        \begin{figure}[htbp]
          \centerline{
             \shadowbox{
                \epsfig{file=#1.ps,width=#3\textwidth}
              }
            }
            \caption{#4}
            \label{#2}
       \end{figure}
       }

% Rotated figure definition
 \newcommand{\rfig}[4]{
        \begin{figure}[htbp]
          \centerline{
            \epsfig{file=#1.ps,width=#3\textheight,angle=90}
                 }
            \caption{#4}
            \label{#2}
       \end{figure}
       }

% Read in a verbatim file
\newcommand{\txt}[2]{
  \subsubsection*{#1}
  \verbatimtabinput{#2}
}

% Read in a LaTeX file
\newcommand{\Input}[1]{
  \input{#1}
}


