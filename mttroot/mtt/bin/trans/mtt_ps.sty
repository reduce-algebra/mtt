\usepackage{graphicx,color}

% Figure definition
\newcommand{\fig}[4]{
  \begin{figure}[htbp]
    \begin{center}
      \fbox{
        \includegraphics[width=#3\linewidth,height=18cm,keepaspectratio]{#1.ps}
        }
        \caption{#4}
      \label{fig:#2}
    \end{center}
  \end{figure}
  }

  \newcommand{\tfig}[4]{
    \begin{figure}[htbp]
      \begin{center}
        \fbox{
          \resizebox{#3\linewidth}{!}{\input{#1}}
        }
        \caption{#4}
        \label{fig:#2}
      \end{center}
    \end{figure}
  }


