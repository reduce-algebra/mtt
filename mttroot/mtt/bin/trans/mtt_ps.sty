%% Style file for postscript document

\usepackage{mtt} % Common stuff

%Postscript figures 
\usepackage{graphicx}

% Figure definition
\newcommand{\fig}[4]{
  \begin{figure}[htbp]
    \begin{center}
      \fbox{
        \includegraphics[width=#3\linewidth,height=18cm,keepaspectratio]{#1.ps}
        }
        \caption{#4}
      \label{fig:#2}
    \end{center}
  \end{figure}
  }
